@using TestCrud.Areas.Identity.Data;
@model User
<h1 class="text-info">Edit User</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post" 
              asp-action="Edit">
            <input asp-for="@Model.Id" 
                   hidden />
            <hr />
            <div asp-validation-summary="All" 
                 class="text-danger">
            </div>

           <div class="form-group pd-5">
                <label asp-for="Email"></label>
                <input asp-for="Email" 
                       readonly 
                       class="form-control" />
                <input asp-for="Email" 
                       hidden />
            </div>
            <div class="form-group pd-5">
                <label asp-for="isAdmin">Rol</label>
                <select asp-for="isAdmin" 
                        class="form-control">
                    <option disabled 
                            selected>
                        --Select Role--
                    </option>
                    <option value=true>
                        Admin
                    </option>
                    <option value=false>
                        Visitante
                    </option>
                </select>
            </div>
            <div class="form-group" 
                 style="padding-top: 15px">
                <button type="submit" 
                        class="btn btn-success">
                    Update
                </button>
                <a asp-action="Index" 
                   class="btn btn-danger" 
                   style="width:auto">
                    Back to User
                </a>
            </div>
        </form>
    </div>
</div>
